<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAgendaEscolar.Pages.CalendarioPage"
             Title="Calendario">
             
    <StackLayout Padding="20" Spacing="20">

        <Label Text="Selecciona una fecha"
               FontSize="24"
               HorizontalOptions="Center" />

        <DatePicker x:Name="SelectorFecha"
                    DateSelected="SelectorFecha_DateSelected"
                    Format="D"
                    HorizontalOptions="Center" />

        <Label x:Name="LabelInfo"
               FontSize="18"
               TextColor="Gray"
               HorizontalOptions="Center" />

    </StackLayout>
</ContentPage>