<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="MiAgendaEscolar.App">

            <!-- Se pueden agregar estilos -->

    <Application.Resources>
        <!-- ðŸŽ¨ Colores principales -->
        <Color x:Key="PrimaryColor">#1976D2</Color>
        <Color x:Key="AccentColor">#FFC107</Color>

        <!-- ðŸ§± Estilo global para botones -->
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <!-- ðŸ·ï¸ Estilo para tÃ­tulos -->
        <Style TargetType="Label" x:Key="TitleLabel">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="TextColor" Value="#333" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>
    </Application.Resources>
</Application>